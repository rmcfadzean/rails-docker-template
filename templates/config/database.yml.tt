development: &default
  adapter: postgresql
  encoding: unicode
  database: <%= app_name %>_development
  pool: <%%= ENV.fetch('RAILS_MAX_THREADS') { 5 } %>
  username: postgres
  password:
  host: postgres

test:
  <<: *default
  database: <%= app_name %>_test

production:
  <<: *default
  url: <%= ENV['DATABASE_URL'] %>
